# PostgreSQL connection string (same DB as signal-dca-bot, set by Railway)
DATABASE_URL=postgresql://user:password@host:5432/database

# Bybit API for live equity (optional)
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=false
BYBIT_DEMO=false
