//@version=6
strategy("PAC Hedge DCA v1 [Deep BT]", overlay=true, pyramiding=100, default_qty_type=strategy.cash, default_qty_value=0, initial_capital=2400, currency=currency.USD, commission_type=strategy.commission.percent, commission_value=0.035, slippage=0, process_orders_on_close=true, calc_on_every_tick=true, margin_long=10, margin_short=10, max_bars_back=5000)

// ══════════════════════════════════════════════════════════════════════════════
// ▌ PAC HEDGE DCA v1 - Price Action Concepts
// ══════════════════════════════════════════════════════════════════════════════
// Entry:     FVG Mitigated from LuxAlgo PAC
// Direction: Market Structure CHoCH/BOS filter
// DCA:       6 percentage-based levels from first entry (Cornix-style)
// Exit:      TP% → Trailing Stop → CHoCH Close → Stop Loss
// Hedge:     Long + Short simultaneously via strategy.order()
//
// COMPATIBLE WITH:
//   - LuxAlgo Price Action Concepts (PAC) → FVG + Market Structure
//   - LuxAlgo Signals & Overlays (S&O)   → Smart Trail (optional exit)
//   - Existing webhook server on Railway  → same alert JSON format
//
// VERBINDUNG (Stil-Tab in PAC):
//   Bullish FVG Mitigated → connect zu PAC plot
//   Bearish FVG Mitigated → connect zu PAC plot
//   Bullish CHoCH         → connect zu PAC plot
//   Bearish CHoCH         → connect zu PAC plot
// ══════════════════════════════════════════════════════════════════════════════


// ══════════════════════════════════════════════════════════════════════════════
// ▌ INPUTS
// ══════════════════════════════════════════════════════════════════════════════

// --- PAC Signal Sources ---
string grp_pac = "═══ PAC Signals (FVG Mitigated) ═══"
float ext_bull_fvg = input.source(close, "Bullish FVG Mitigated", group=grp_pac, tooltip="PAC Stil-Tab: Plot fuer Bullish FVG Mitigated Event")
float ext_bear_fvg = input.source(close, "Bearish FVG Mitigated", group=grp_pac, tooltip="PAC Stil-Tab: Plot fuer Bearish FVG Mitigated Event")

// --- Market Structure ---
string grp_ms = "═══ Market Structure (CHoCH) ═══"
bool use_ms_filter = input.bool(true, "MS Direction Filter", group=grp_ms, tooltip="AN = nur Longs bei bullish MS, Shorts bei bearish MS.\nAUS = beide Seiten frei (reiner Hedge).")
float ext_bull_choch = input.source(close, "Bullish CHoCH", group=grp_ms, tooltip="PAC Stil-Tab: Bullish CHoCH signal plot")
float ext_bear_choch = input.source(close, "Bearish CHoCH", group=grp_ms, tooltip="PAC Stil-Tab: Bearish CHoCH signal plot")
bool choch_closes = input.bool(true, "CHoCH schliesst Gegenposition", group=grp_ms, tooltip="Bearish CHoCH schliesst alle Longs (und umgekehrt)")
bool choch_flip = input.bool(false, "CHoCH Flip (direkt neue Position)", group=grp_ms, tooltip="Nach CHoCH-Close direkt neue Position in CHoCH-Richtung oeffnen")

// --- Optional: S&O Smart Trail for exit ---
string grp_trail = "═══ Trail / Exit ═══"
string trail_mode = input.string("Internal ATR", "Trail Modus", options=["Internal ATR", "External Smart Trail"], group=grp_trail, tooltip="Internal = ATR-basierter Trail (selbstaendig)\nExternal = LuxAlgo Smart Trail verbinden")
float trail_atr_mult = input.float(2.0, "Trail ATR Mult (Internal)", minval=0.5, maxval=5.0, step=0.25, group=grp_trail)
float ext_smart_trail = input.source(close, "Smart Trail (S&O)", group=grp_trail, tooltip="Optional: LuxAlgo Signals & Overlays Smart Trail verbinden")

// --- DCA Levels (Cornix-style, from first entry) ---
string grp_dca = "═══ DCA Levels ═══"
int max_dca = input.int(6, "Max DCA Stufen", minval=0, maxval=10, group=grp_dca)
float dca_1_pct = input.float(1.0, "DCA 1 Abstand %", minval=0.2, maxval=5.0, step=0.1, group=grp_dca)
float dca_2_pct = input.float(2.0, "DCA 2 Abstand %", minval=0.5, maxval=8.0, step=0.1, group=grp_dca)
float dca_3_pct = input.float(3.5, "DCA 3 Abstand %", minval=1.0, maxval=12.0, step=0.1, group=grp_dca)
float dca_4_pct = input.float(5.0, "DCA 4 Abstand %", minval=1.5, maxval=15.0, step=0.1, group=grp_dca)
float dca_5_pct = input.float(7.0, "DCA 5 Abstand %", minval=2.0, maxval=20.0, step=0.1, group=grp_dca)
float dca_6_pct = input.float(10.0, "DCA 6 Abstand %", minval=3.0, maxval=25.0, step=0.1, group=grp_dca)
float dca_decay = input.float(0.85, "DCA Size Decay", minval=0.3, maxval=1.0, step=0.05, group=grp_dca, tooltip="Jede DCA-Stufe = vorherige Size x Decay")
bool dca_need_fvg = input.bool(false, "DCA braucht FVG Signal", group=grp_dca, tooltip="AUS = rein preisbasiert (Cornix-Style)\nAN = DCA nur wenn kuerzlich FVG Mitigated")

// --- Take Profit ---
string grp_tp = "═══ Take Profit ═══"
float tp_pct = input.float(1.5, "Take Profit %", minval=0.3, maxval=10.0, step=0.1, group=grp_tp, tooltip="TP vom Durchschnittspreis. DCA verbessert den Avg → TP naeher.")
float tp_partial = input.float(50, "TP Teilverkauf %", minval=20, maxval=80, step=5, group=grp_tp)

// --- Account ---
string grp_acc = "═══ Account ═══"
float equity_pct = input.float(3.0, "Equity % pro Trade", minval=0.5, maxval=10.0, step=0.5, group=grp_acc, tooltip="Basisgroesse fuer Entry. DCA-Levels skalieren davon runter.")
int max_slots = input.int(6, "Max Slots", minval=2, maxval=12, group=grp_acc)

// --- Risk ---
string grp_risk = "═══ Risiko ═══"
float sl_pct = input.float(2.0, "Stop Loss %", minval=0.5, maxval=10.0, step=0.5, group=grp_risk, tooltip="SL vom Durchschnittspreis")
bool use_dynamic_sl = input.bool(false, "Dynamic SL (ATR-basiert)", group=grp_risk)
float dyn_sl_mult = input.float(2.0, "Dynamic SL ATR Mult", minval=0.5, maxval=5.0, step=0.25, group=grp_risk)
float max_dd_pct = input.float(15, "Max Drawdown %", minval=5, maxval=30, step=1, group=grp_risk)
int cooldown_bars = input.int(3, "Cooldown nach Exit (Bars)", minval=0, maxval=20, group=grp_risk)
bool use_max_bars = input.bool(false, "Max Bars in Trade", group=grp_risk, tooltip="Schliesst Position nach X Bars wenn kein Exit kam")
int max_trade_bars = input.int(500, "Max Bars bis Auto-Close", minval=50, maxval=2000, step=50, group=grp_risk)

// --- ATR / Volatility ---
string grp_atr = "═══ ATR / Vola ═══"
int atr_len = input.int(14, "ATR Laenge", minval=5, maxval=50, group=grp_atr)
int atr_avg_len = input.int(50, "ATR Avg Lookback", minval=20, maxval=200, group=grp_atr)
float vol_high_mult = input.float(1.5, "Hoch Vola Schwelle", minval=1.1, maxval=3.0, step=0.1, group=grp_atr)
float vol_extreme_mult = input.float(2.5, "Extrem Vola Schwelle", minval=1.5, maxval=5.0, step=0.1, group=grp_atr)

// --- Funding ---
string grp_fee = "═══ Fees ═══"
float funding_rate = input.float(0.01, "Avg Funding % 8h", minval=-0.1, maxval=0.3, step=0.005, group=grp_fee)

// --- Webhook ---
string grp_wh = "═══ Webhook ═══"
bool enable_alerts = input.bool(false, "Webhook Alerts aktivieren", group=grp_wh, tooltip="JSON Alerts fuer Railway Webhook Server.\nIn TradingView Alert: 'Nur alert() Funktionsaufrufe'")
string wh_secret = input.string("", "Webhook Secret", group=grp_wh)
string wh_ticker = input.string("HYPEUSDT", "Ticker", group=grp_wh)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ ATR & VOLATILITY
// ══════════════════════════════════════════════════════════════════════════════

float atr_val = ta.atr(atr_len)
float atr_avg = ta.sma(atr_val, atr_avg_len)
float atr_ratio = nz(atr_val / atr_avg, 1.0)
bool vol_high = atr_ratio >= vol_high_mult and atr_ratio < vol_extreme_mult
bool vol_extreme = atr_ratio >= vol_extreme_mult
float vol_size_mult = vol_extreme ? 0.25 : vol_high ? 0.5 : 1.0


// ══════════════════════════════════════════════════════════════════════════════
// ▌ PAC SIGNAL DETECTION
// ══════════════════════════════════════════════════════════════════════════════

// FVG Mitigated: plot value changes when event fires
bool bull_fvg_mit = ext_bull_fvg != ext_bull_fvg[1]
bool bear_fvg_mit = ext_bear_fvg != ext_bear_fvg[1]

// Recent FVG within 10 bars (for optional DCA filter)
bool recent_bull_fvg = bull_fvg_mit
for i = 1 to 9
    if ext_bull_fvg[i] != ext_bull_fvg[i + 1]
        recent_bull_fvg := true
bool recent_bear_fvg = bear_fvg_mit
for i = 1 to 9
    if ext_bear_fvg[i] != ext_bear_fvg[i + 1]
        recent_bear_fvg := true

// CHoCH: Market Structure change
bool bull_choch = ext_bull_choch != ext_bull_choch[1]
bool bear_choch = ext_bear_choch != ext_bear_choch[1]

// Debug counters
var int dbg_bull_fvg_count = 0
var int dbg_bear_fvg_count = 0
var int dbg_bull_choch_count = 0
var int dbg_bear_choch_count = 0
if bull_fvg_mit
    dbg_bull_fvg_count += 1
if bear_fvg_mit
    dbg_bear_fvg_count += 1
if bull_choch
    dbg_bull_choch_count += 1
if bear_choch
    dbg_bear_choch_count += 1


// ══════════════════════════════════════════════════════════════════════════════
// ▌ MARKET STRUCTURE STATE
// ══════════════════════════════════════════════════════════════════════════════

var int ms_state = 0  // 0=neutral, 1=bullish, -1=bearish

if bull_choch
    ms_state := 1
if bear_choch
    ms_state := -1

bool ms_allow_long = not use_ms_filter or ms_state >= 0
bool ms_allow_short = not use_ms_filter or ms_state <= 0


// ══════════════════════════════════════════════════════════════════════════════
// ▌ POSITION TRACKING
// ══════════════════════════════════════════════════════════════════════════════

var float long_qty = 0.0
var float long_avg_price = 0.0
var float long_entry_price = 0.0   // first entry price (DCA levels relative to this)
var int long_dca_count = 0
var int long_exit_stage = 0        // 0=full position, 1=TP taken
var float long_sl_price = 0.0
var float long_trail_stop = 0.0
var int long_entry_bar = 0

var float short_qty = 0.0
var float short_avg_price = 0.0
var float short_entry_price = 0.0
var int short_dca_count = 0
var int short_exit_stage = 0
var float short_sl_price = 0.0
var float short_trail_stop = 0.0
var int short_entry_bar = 0

var int last_exit_bar = 0
var bool emergency_stop = false
var float funding_total = 0.0
var int long_consec_losses = 0
var int short_consec_losses = 0

bool long_active = long_qty > 0
bool short_active = short_qty > 0
bool in_cooldown = (bar_index - last_exit_bar) < cooldown_bars
int active_slots = (long_active ? 1 : 0) + (short_active ? 1 : 0)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ TRAILING STOP (ratcheting - only moves in profit direction)
// ══════════════════════════════════════════════════════════════════════════════

if long_active and long_exit_stage >= 1
    float new_stop = trail_mode == "External Smart Trail" ? ext_smart_trail : close - atr_val * trail_atr_mult
    if long_trail_stop == 0 or new_stop > long_trail_stop
        long_trail_stop := new_stop

if short_active and short_exit_stage >= 1
    float new_stop = trail_mode == "External Smart Trail" ? ext_smart_trail : close + atr_val * trail_atr_mult
    if short_trail_stop == 0 or new_stop < short_trail_stop
        short_trail_stop := new_stop


// ══════════════════════════════════════════════════════════════════════════════
// ▌ DRAWDOWN PROTECTION
// ══════════════════════════════════════════════════════════════════════════════

var float peak_equity = strategy.initial_capital

if strategy.equity > peak_equity
    peak_equity := strategy.equity

float dd_from_peak = peak_equity > 0 ? (1.0 - strategy.equity / peak_equity) * 100.0 : 0.0

if dd_from_peak >= max_dd_pct
    emergency_stop := true
if emergency_stop and dd_from_peak < max_dd_pct * 0.5
    emergency_stop := false


// ══════════════════════════════════════════════════════════════════════════════
// ▌ COMBINED GATE
// ══════════════════════════════════════════════════════════════════════════════

bool can_open = active_slots < max_slots and not in_cooldown and not emergency_stop
bool can_open_long = can_open and ms_allow_long
bool can_open_short = can_open and ms_allow_short

// Funding cost tracking
if long_active
    funding_total += long_qty * close * funding_rate / 100 / 96
if short_active
    funding_total += short_qty * close * funding_rate / 100 / 96

// Size calculation (equity % × leverage via margin)
float current_equity = strategy.equity
float base_size_usd = current_equity * equity_pct / 100 * vol_size_mult

calc_qty(float usd_size) =>
    usd_size * 10 / close   // 10x leverage

// DCA level helper (% from first entry)
get_dca_pct(int level) =>
    switch level
        1 => dca_1_pct
        2 => dca_2_pct
        3 => dca_3_pct
        4 => dca_4_pct
        5 => dca_5_pct
        6 => dca_6_pct
        => 999.0

// SL calculation
calc_sl_long(float avg_price) =>
    use_dynamic_sl ? avg_price - atr_val * dyn_sl_mult : avg_price * (1 - sl_pct / 100)

calc_sl_short(float avg_price) =>
    use_dynamic_sl ? avg_price + atr_val * dyn_sl_mult : avg_price * (1 + sl_pct / 100)

// Webhook Alert Builder (compatible with existing Railway server)
build_alert(string act, float qty, float price, float sl, string cmt) =>
    '{"s":"' + wh_secret + '","t":"' + wh_ticker + '","a":"' + act + '",' +
     '"q":' + str.tostring(qty, "#.####") + ',' +
     '"p":' + str.tostring(price, "#.####") + ',' +
     '"sl":' + str.tostring(nz(sl, 0), "#.####") + ',' +
     '"c":"' + cmt + '"}'


// ══════════════════════════════════════════════════════════════════════════════
// ▌ MAX BARS AUTO-CLOSE
// ══════════════════════════════════════════════════════════════════════════════

if use_max_bars and long_active and (bar_index - long_entry_bar) >= max_trade_bars
    if long_qty > 0
        strategy.order("L_MB", strategy.short, qty=long_qty, comment="L MaxBar")
        if enable_alerts
            alert(build_alert("close_long", long_qty, close, 0, "L MaxBar"), alert.freq_once_per_bar_close)
    float pnl = long_qty * (close - long_avg_price)
    if pnl < 0
        long_consec_losses += 1
    else
        long_consec_losses := 0
    long_qty := 0.0
    long_avg_price := 0.0
    long_entry_price := 0.0
    long_dca_count := 0
    long_exit_stage := 0
    long_sl_price := 0.0
    long_trail_stop := 0.0
    last_exit_bar := bar_index

if use_max_bars and short_active and (bar_index - short_entry_bar) >= max_trade_bars
    if short_qty > 0
        strategy.order("S_MB", strategy.long, qty=short_qty, comment="S MaxBar")
        if enable_alerts
            alert(build_alert("close_short", short_qty, close, 0, "S MaxBar"), alert.freq_once_per_bar_close)
    float pnl = short_qty * (short_avg_price - close)
    if pnl < 0
        short_consec_losses += 1
    else
        short_consec_losses := 0
    short_qty := 0.0
    short_avg_price := 0.0
    short_entry_price := 0.0
    short_dca_count := 0
    short_exit_stage := 0
    short_sl_price := 0.0
    short_trail_stop := 0.0
    last_exit_bar := bar_index


// ══════════════════════════════════════════════════════════════════════════════
// ▌ ENTRIES (FVG Mitigated → open position)
// ══════════════════════════════════════════════════════════════════════════════

if bull_fvg_mit and can_open_long and not long_active
    float qty = calc_qty(base_size_usd)
    if qty > 0
        strategy.order("L_E", strategy.long, qty=qty, comment="L FVG")
        long_qty := qty
        long_avg_price := close
        long_entry_price := close
        long_dca_count := 0
        long_exit_stage := 0
        long_sl_price := calc_sl_long(close)
        long_trail_stop := 0.0
        long_entry_bar := bar_index
        if enable_alerts
            alert(build_alert("open_long", qty, close, long_sl_price, "L FVG"), alert.freq_once_per_bar_close)

if bear_fvg_mit and can_open_short and not short_active
    float qty = calc_qty(base_size_usd)
    if qty > 0
        strategy.order("S_E", strategy.short, qty=qty, comment="S FVG")
        short_qty := qty
        short_avg_price := close
        short_entry_price := close
        short_dca_count := 0
        short_exit_stage := 0
        short_sl_price := calc_sl_short(close)
        short_trail_stop := 0.0
        short_entry_bar := bar_index
        if enable_alerts
            alert(build_alert("open_short", qty, close, short_sl_price, "S FVG"), alert.freq_once_per_bar_close)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ DCA (price-based from first entry, 1 level per bar max)
// ══════════════════════════════════════════════════════════════════════════════

if long_active and long_dca_count < max_dca and not emergency_stop
    float next_pct = get_dca_pct(long_dca_count + 1)
    float dca_level = long_entry_price * (1 - next_pct / 100)
    bool fvg_ok = not dca_need_fvg or recent_bull_fvg
    if low <= dca_level and fvg_ok
        float dca_usd = base_size_usd * math.pow(dca_decay, long_dca_count + 1)
        float dca_qty = calc_qty(dca_usd)
        if dca_qty > 0
            string cmt = "L D" + str.tostring(long_dca_count + 1)
            strategy.order("L_D" + str.tostring(long_dca_count + 1), strategy.long, qty=dca_qty, comment=cmt)
            float cost = long_avg_price * long_qty + close * dca_qty
            long_qty := long_qty + dca_qty
            long_avg_price := cost / long_qty
            long_dca_count += 1
            long_sl_price := calc_sl_long(long_avg_price)
            if long_exit_stage >= 1
                long_trail_stop := 0.0
            if enable_alerts
                alert(build_alert("dca_long", dca_qty, long_avg_price, long_sl_price, cmt), alert.freq_once_per_bar_close)

if short_active and short_dca_count < max_dca and not emergency_stop
    float next_pct = get_dca_pct(short_dca_count + 1)
    float dca_level = short_entry_price * (1 + next_pct / 100)
    bool fvg_ok = not dca_need_fvg or recent_bear_fvg
    if high >= dca_level and fvg_ok
        float dca_usd = base_size_usd * math.pow(dca_decay, short_dca_count + 1)
        float dca_qty = calc_qty(dca_usd)
        if dca_qty > 0
            string cmt = "S D" + str.tostring(short_dca_count + 1)
            strategy.order("S_D" + str.tostring(short_dca_count + 1), strategy.short, qty=dca_qty, comment=cmt)
            float cost = short_avg_price * short_qty + close * dca_qty
            short_qty := short_qty + dca_qty
            short_avg_price := cost / short_qty
            short_dca_count += 1
            short_sl_price := calc_sl_short(short_avg_price)
            if short_exit_stage >= 1
                short_trail_stop := 0.0
            if enable_alerts
                alert(build_alert("dca_short", dca_qty, short_avg_price, short_sl_price, cmt), alert.freq_once_per_bar_close)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ EXIT 1: TAKE PROFIT (partial close, then trail activates)
// ══════════════════════════════════════════════════════════════════════════════

if long_active and long_exit_stage == 0
    float tp_level = long_avg_price * (1 + tp_pct / 100)
    if high >= tp_level
        float close_qty = long_qty * tp_partial / 100
        if close_qty > 0
            string cmt = "L TP" + str.tostring(tp_partial, "#") + "%"
            strategy.order("L_TP", strategy.short, qty=close_qty, comment=cmt)
            long_qty := long_qty - close_qty
            long_exit_stage := 1
            long_sl_price := long_avg_price   // SL to breakeven after TP
            if enable_alerts
                alert(build_alert("exit_x_long", close_qty, close, long_sl_price, cmt), alert.freq_once_per_bar_close)

if short_active and short_exit_stage == 0
    float tp_level = short_avg_price * (1 - tp_pct / 100)
    if low <= tp_level
        float close_qty = short_qty * tp_partial / 100
        if close_qty > 0
            string cmt = "S TP" + str.tostring(tp_partial, "#") + "%"
            strategy.order("S_TP", strategy.long, qty=close_qty, comment=cmt)
            short_qty := short_qty - close_qty
            short_exit_stage := 1
            short_sl_price := short_avg_price
            if enable_alerts
                alert(build_alert("exit_x_short", close_qty, close, short_sl_price, cmt), alert.freq_once_per_bar_close)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ EXIT 2: TRAILING STOP (activates after TP1)
// ══════════════════════════════════════════════════════════════════════════════

if long_active and long_exit_stage >= 1 and long_trail_stop > 0 and low <= long_trail_stop
    float pnl = long_qty * (close - long_avg_price)
    if pnl < 0
        long_consec_losses += 1
    else
        long_consec_losses := 0
    if long_qty > 0
        strategy.order("L_TR", strategy.short, qty=long_qty, comment="L Trail")
        if enable_alerts
            alert(build_alert("trail_long", long_qty, close, 0, "L Trail"), alert.freq_once_per_bar_close)
    long_qty := 0.0
    long_avg_price := 0.0
    long_entry_price := 0.0
    long_dca_count := 0
    long_exit_stage := 0
    long_sl_price := 0.0
    long_trail_stop := 0.0
    last_exit_bar := bar_index

if short_active and short_exit_stage >= 1 and short_trail_stop > 0 and high >= short_trail_stop
    float pnl = short_qty * (short_avg_price - close)
    if pnl < 0
        short_consec_losses += 1
    else
        short_consec_losses := 0
    if short_qty > 0
        strategy.order("S_TR", strategy.long, qty=short_qty, comment="S Trail")
        if enable_alerts
            alert(build_alert("trail_short", short_qty, close, 0, "S Trail"), alert.freq_once_per_bar_close)
    short_qty := 0.0
    short_avg_price := 0.0
    short_entry_price := 0.0
    short_dca_count := 0
    short_exit_stage := 0
    short_sl_price := 0.0
    short_trail_stop := 0.0
    last_exit_bar := bar_index


// ══════════════════════════════════════════════════════════════════════════════
// ▌ EXIT 3: CHoCH CLOSE (+ optional Flip)
// ══════════════════════════════════════════════════════════════════════════════

// Bearish CHoCH → close longs
if bear_choch and choch_closes and long_active
    float pnl = long_qty * (close - long_avg_price)
    if pnl < 0
        long_consec_losses += 1
    else
        long_consec_losses := 0
    if long_qty > 0
        strategy.order("L_CH", strategy.short, qty=long_qty, comment="L CHoCH")
        if enable_alerts
            alert(build_alert("close_long", long_qty, close, 0, "L CHoCH"), alert.freq_once_per_bar_close)
    long_qty := 0.0
    long_avg_price := 0.0
    long_entry_price := 0.0
    long_dca_count := 0
    long_exit_stage := 0
    long_sl_price := 0.0
    long_trail_stop := 0.0
    last_exit_bar := bar_index
    // Optional: flip to short on CHoCH
    if choch_flip and not short_active and not emergency_stop
        float flip_qty = calc_qty(base_size_usd)
        if flip_qty > 0
            strategy.order("S_FL", strategy.short, qty=flip_qty, comment="S Flip")
            short_qty := flip_qty
            short_avg_price := close
            short_entry_price := close
            short_dca_count := 0
            short_exit_stage := 0
            short_sl_price := calc_sl_short(close)
            short_trail_stop := 0.0
            short_entry_bar := bar_index
            if enable_alerts
                alert(build_alert("flip_short", flip_qty, close, short_sl_price, "S Flip"), alert.freq_once_per_bar_close)

// Bullish CHoCH → close shorts
if bull_choch and choch_closes and short_active
    float pnl = short_qty * (short_avg_price - close)
    if pnl < 0
        short_consec_losses += 1
    else
        short_consec_losses := 0
    if short_qty > 0
        strategy.order("S_CH", strategy.long, qty=short_qty, comment="S CHoCH")
        if enable_alerts
            alert(build_alert("close_short", short_qty, close, 0, "S CHoCH"), alert.freq_once_per_bar_close)
    short_qty := 0.0
    short_avg_price := 0.0
    short_entry_price := 0.0
    short_dca_count := 0
    short_exit_stage := 0
    short_sl_price := 0.0
    short_trail_stop := 0.0
    last_exit_bar := bar_index
    if choch_flip and not long_active and not emergency_stop
        float flip_qty = calc_qty(base_size_usd)
        if flip_qty > 0
            strategy.order("L_FL", strategy.long, qty=flip_qty, comment="L Flip")
            long_qty := flip_qty
            long_avg_price := close
            long_entry_price := close
            long_dca_count := 0
            long_exit_stage := 0
            long_sl_price := calc_sl_long(close)
            long_trail_stop := 0.0
            long_entry_bar := bar_index
            if enable_alerts
                alert(build_alert("flip_long", flip_qty, close, long_sl_price, "L Flip"), alert.freq_once_per_bar_close)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ EXIT 4: STOP LOSS
// ══════════════════════════════════════════════════════════════════════════════

if long_active and long_sl_price > 0 and low <= long_sl_price
    long_consec_losses += 1
    if long_qty > 0
        strategy.order("L_SL", strategy.short, qty=long_qty, stop=long_sl_price, comment="L SL")
        if enable_alerts
            alert(build_alert("sl_long", long_qty, long_sl_price, 0, "L SL"), alert.freq_once_per_bar_close)
    long_qty := 0.0
    long_avg_price := 0.0
    long_entry_price := 0.0
    long_dca_count := 0
    long_exit_stage := 0
    long_sl_price := 0.0
    long_trail_stop := 0.0
    last_exit_bar := bar_index

if short_active and short_sl_price > 0 and high >= short_sl_price
    short_consec_losses += 1
    if short_qty > 0
        strategy.order("S_SL", strategy.long, qty=short_qty, stop=short_sl_price, comment="S SL")
        if enable_alerts
            alert(build_alert("sl_short", short_qty, short_sl_price, 0, "S SL"), alert.freq_once_per_bar_close)
    short_qty := 0.0
    short_avg_price := 0.0
    short_entry_price := 0.0
    short_dca_count := 0
    short_exit_stage := 0
    short_sl_price := 0.0
    short_trail_stop := 0.0
    last_exit_bar := bar_index


// ══════════════════════════════════════════════════════════════════════════════
// ▌ EMERGENCY (Max Drawdown exceeded)
// ══════════════════════════════════════════════════════════════════════════════

if emergency_stop and (long_active or short_active)
    if long_qty > 0
        strategy.order("L_EM", strategy.short, qty=long_qty, comment="EM L")
        if enable_alerts
            alert(build_alert("emerg_long", long_qty, close, 0, "EM L"), alert.freq_once_per_bar_close)
        long_qty := 0.0
        long_avg_price := 0.0
        long_entry_price := 0.0
        long_dca_count := 0
        long_exit_stage := 0
        long_sl_price := 0.0
        long_trail_stop := 0.0
    if short_qty > 0
        strategy.order("S_EM", strategy.long, qty=short_qty, comment="EM S")
        if enable_alerts
            alert(build_alert("emerg_short", short_qty, close, 0, "EM S"), alert.freq_once_per_bar_close)
        short_qty := 0.0
        short_avg_price := 0.0
        short_entry_price := 0.0
        short_dca_count := 0
        short_exit_stage := 0
        short_sl_price := 0.0
        short_trail_stop := 0.0
    last_exit_bar := bar_index


// ══════════════════════════════════════════════════════════════════════════════
// ▌ HEARTBEAT ALERT (jede Bar - kompatibel mit bestehendem Server)
// ══════════════════════════════════════════════════════════════════════════════

if enable_alerts and barstate.isconfirmed
    string hb = '{"s":"' + wh_secret + '","a":"hb",' +
     '"cp":' + str.tostring(close, "#.####") + ',' +
     '"ms":' + str.tostring(ms_state) + ',' +
     '"s1":0,"s3":0,"r1":0,"r3":0,' +
     '"tr":' + str.tostring(nz(long_trail_stop > 0 ? long_trail_stop : short_trail_stop > 0 ? short_trail_stop : 0, 0), "#.####") + ',' +
     '"td":' + str.tostring(ms_state) + ',' +
     '"lq":' + str.tostring(long_qty, "#.####") + ',' +
     '"la":' + str.tostring(long_avg_price, "#.####") + ',' +
     '"ls":' + str.tostring(nz(long_sl_price, 0), "#.####") + ',' +
     '"ld":' + str.tostring(long_dca_count) + ',' +
     '"le":' + str.tostring(long_exit_stage) + ',' +
     '"sq":' + str.tostring(short_qty, "#.####") + ',' +
     '"sa":' + str.tostring(short_avg_price, "#.####") + ',' +
     '"ss":' + str.tostring(nz(short_sl_price, 0), "#.####") + ',' +
     '"sd":' + str.tostring(short_dca_count) + ',' +
     '"se":' + str.tostring(short_exit_stage) + '}'
    alert(hb, alert.freq_once_per_bar_close)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ VISUALISIERUNG
// ══════════════════════════════════════════════════════════════════════════════

// Average entry price
plot(long_active ? long_avg_price : na, "L Avg", color=color.new(#4CAF50, 30), style=plot.style_linebr, linewidth=1)
plot(short_active ? short_avg_price : na, "S Avg", color=color.new(#F44336, 30), style=plot.style_linebr, linewidth=1)

// TP levels
float long_tp_vis = long_active and long_exit_stage == 0 ? long_avg_price * (1 + tp_pct / 100) : na
float short_tp_vis = short_active and short_exit_stage == 0 ? short_avg_price * (1 - tp_pct / 100) : na
plot(long_tp_vis, "L TP", color=color.new(#4CAF50, 60), style=plot.style_linebr, linewidth=1)
plot(short_tp_vis, "S TP", color=color.new(#F44336, 60), style=plot.style_linebr, linewidth=1)

// SL levels
plot(long_active and long_sl_price > 0 ? long_sl_price : na, "L SL", color=color.new(#FF5252, 50), style=plot.style_linebr, linewidth=1)
plot(short_active and short_sl_price > 0 ? short_sl_price : na, "S SL", color=color.new(#FF5252, 50), style=plot.style_linebr, linewidth=1)

// Trail levels
plot(long_active and long_trail_stop > 0 ? long_trail_stop : na, "L Trail", color=color.new(#2196F3, 50), style=plot.style_linebr, linewidth=1)
plot(short_active and short_trail_stop > 0 ? short_trail_stop : na, "S Trail", color=color.new(#2196F3, 50), style=plot.style_linebr, linewidth=1)

// Next DCA level
float next_dca_long = long_active and long_dca_count < max_dca ? long_entry_price * (1 - get_dca_pct(long_dca_count + 1) / 100) : na
float next_dca_short = short_active and short_dca_count < max_dca ? short_entry_price * (1 + get_dca_pct(short_dca_count + 1) / 100) : na
plot(next_dca_long, "Next DCA L", color=color.new(#4CAF50, 75), style=plot.style_linebr, linewidth=1)
plot(next_dca_short, "Next DCA S", color=color.new(#F44336, 75), style=plot.style_linebr, linewidth=1)

// Market Structure background
color ms_bg = ms_state == 1 ? color.new(#4CAF50, 96) : ms_state == -1 ? color.new(#F44336, 96) : na
bgcolor(use_ms_filter ? ms_bg : na)
bgcolor(emergency_stop ? color.new(#FF0000, 90) : na)

// Signal markers
plotshape(bull_fvg_mit, "Bull FVG", shape.triangleup, location.belowbar, color.new(#4CAF50, 20), size=size.tiny)
plotshape(bear_fvg_mit, "Bear FVG", shape.triangledown, location.abovebar, color.new(#F44336, 20), size=size.tiny)
plotshape(bull_choch, "Bull CHoCH", shape.diamond, location.belowbar, color.new(#2196F3, 0), size=size.tiny)
plotshape(bear_choch, "Bear CHoCH", shape.diamond, location.abovebar, color.new(#FF9800, 0), size=size.tiny)


// ══════════════════════════════════════════════════════════════════════════════
// ▌ INFO TABLE
// ══════════════════════════════════════════════════════════════════════════════

var table info = table.new(position.top_right, 4, 11, bgcolor=color.new(#0d1117, 5), border_color=color.new(#30305a, 0), border_width=1)

if barstate.islast
    // Header
    table.cell(info, 0, 0, "PAC", text_color=#00d4ff, text_size=size.tiny, bgcolor=color.new(#0d1117, 0))
    table.cell(info, 1, 0, "HEDGE", text_color=#00d4ff, text_size=size.tiny, bgcolor=color.new(#0d1117, 0))
    table.cell(info, 2, 0, "DCA", text_color=#00d4ff, text_size=size.tiny, bgcolor=color.new(#0d1117, 0))
    table.cell(info, 3, 0, "v1", text_color=#00d4ff, text_size=size.tiny, bgcolor=color.new(#0d1117, 0))

    // Market Structure
    string ms_txt = ms_state == 1 ? "BULL" : ms_state == -1 ? "BEAR" : "NEUTRAL"
    color ms_col = ms_state == 1 ? #4CAF50 : ms_state == -1 ? #F44336 : #FF9800
    table.cell(info, 0, 1, "MS", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 1, ms_txt, text_color=ms_col, text_size=size.tiny)
    string filter_txt = use_ms_filter ? "ON" : "OFF"
    table.cell(info, 2, 1, "Filter", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 1, filter_txt, text_color=use_ms_filter ? #4CAF50 : #555555, text_size=size.tiny)

    // Long Position
    string l_stg = long_exit_stage == 0 ? "FULL" : "TP"
    string l_txt = long_active ? l_stg + " D:" + str.tostring(long_dca_count) : "---"
    color l_c = long_active ? #4CAF50 : #555555
    table.cell(info, 0, 2, "LONG", text_color=#4CAF50, text_size=size.tiny)
    table.cell(info, 1, 2, l_txt, text_color=l_c, text_size=size.tiny)
    string la = long_active ? str.tostring(long_avg_price, "#.##") : "---"
    table.cell(info, 2, 2, "Avg", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 2, la, text_color=#4CAF50, text_size=size.tiny)

    // Short Position
    string s_stg = short_exit_stage == 0 ? "FULL" : "TP"
    string s_txt = short_active ? s_stg + " D:" + str.tostring(short_dca_count) : "---"
    color s_c = short_active ? #F44336 : #555555
    table.cell(info, 0, 3, "SHORT", text_color=#F44336, text_size=size.tiny)
    table.cell(info, 1, 3, s_txt, text_color=s_c, text_size=size.tiny)
    string sa = short_active ? str.tostring(short_avg_price, "#.##") : "---"
    table.cell(info, 2, 3, "Avg", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 3, sa, text_color=#F44336, text_size=size.tiny)

    // SL
    string ls = long_active ? str.tostring(long_sl_price, "#.##") : "---"
    string ss = short_active ? str.tostring(short_sl_price, "#.##") : "---"
    table.cell(info, 0, 4, "L SL", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 4, ls, text_color=#FF5252, text_size=size.tiny)
    table.cell(info, 2, 4, "S SL", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 4, ss, text_color=#FF5252, text_size=size.tiny)

    // Trail
    string lt = long_active and long_trail_stop > 0 ? str.tostring(long_trail_stop, "#.##") : "---"
    string st_trail = short_active and short_trail_stop > 0 ? str.tostring(short_trail_stop, "#.##") : "---"
    table.cell(info, 0, 5, "L TR", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 5, lt, text_color=#2196F3, text_size=size.tiny)
    table.cell(info, 2, 5, "S TR", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 5, st_trail, text_color=#2196F3, text_size=size.tiny)

    // TP levels
    string tp_l = long_active and long_exit_stage == 0 ? str.tostring(long_avg_price * (1 + tp_pct / 100), "#.##") : "---"
    string tp_s = short_active and short_exit_stage == 0 ? str.tostring(short_avg_price * (1 - tp_pct / 100), "#.##") : "---"
    table.cell(info, 0, 6, "L TP", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 6, tp_l, text_color=#4CAF50, text_size=size.tiny)
    table.cell(info, 2, 6, "S TP", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 6, tp_s, text_color=#F44336, text_size=size.tiny)

    // Volatility
    string vtxt = vol_extreme ? "EXTREM" : vol_high ? "HOCH" : "NORMAL"
    color vc = vol_extreme ? #F44336 : vol_high ? #FF9800 : #4CAF50
    table.cell(info, 0, 7, "ATR", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 7, str.tostring(atr_ratio, "#.##") + "x", text_color=vc, text_size=size.tiny)
    table.cell(info, 2, 7, "Vol", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 7, vtxt + " " + str.tostring(vol_size_mult * 100, "#") + "%", text_color=vc, text_size=size.tiny)

    // Status + DD
    string st_txt = emergency_stop ? "STOPPED" : "ACTIVE"
    color stc = emergency_stop ? #F44336 : #4CAF50
    table.cell(info, 0, 8, "Status", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 8, st_txt, text_color=stc, text_size=size.tiny)
    table.cell(info, 2, 8, "DD", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 8, str.tostring(dd_from_peak, "#.1") + "%", text_color=dd_from_peak > max_dd_pct * 0.7 ? #F44336 : #4CAF50, text_size=size.tiny)

    // Funding + Streak
    table.cell(info, 0, 9, "Fund", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 1, 9, "-$" + str.tostring(funding_total, "#.0"), text_color=#FF9800, text_size=size.tiny)
    string streak_txt = "L:" + str.tostring(long_consec_losses) + " S:" + str.tostring(short_consec_losses)
    color streak_col = math.max(long_consec_losses, short_consec_losses) >= 5 ? #F44336 : math.max(long_consec_losses, short_consec_losses) >= 3 ? #FF9800 : #4CAF50
    table.cell(info, 2, 9, "Streak", text_color=#aaaaaa, text_size=size.tiny)
    table.cell(info, 3, 9, streak_txt, text_color=streak_col, text_size=size.tiny)

    // Debug: signal counts
    string dbg1 = "FVG B:" + str.tostring(dbg_bull_fvg_count) + " S:" + str.tostring(dbg_bear_fvg_count)
    string dbg2 = "CHoCH B:" + str.tostring(dbg_bull_choch_count) + " S:" + str.tostring(dbg_bear_choch_count)
    table.cell(info, 0, 10, "DBG", text_color=#FF9800, text_size=size.tiny)
    table.cell(info, 1, 10, dbg1, text_color=#FF9800, text_size=size.tiny)
    table.cell(info, 2, 10, dbg2, text_color=#FF9800, text_size=size.tiny)
    table.cell(info, 3, 10, "", text_color=#FF9800, text_size=size.tiny)
