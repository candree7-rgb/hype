    // Long
    table.cell(info, 0, 2, "LONG", text_color=#4CAF50, text_size=size.tiny)
    table.cell(info, 1, 2, long_active ? "E" + str.tostring(long_dca_count + 1) : "---", text_color=long_active ? #4CAF50 : #555555, text_size=size.tiny)
